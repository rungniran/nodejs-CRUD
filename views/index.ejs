<% include header %>
        <div class="container" style="margin-top: 10px;">
            <h3>แสดงข้อมูล</h3><br>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">เพิ่มรายชื่อ</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <form  method="post">
                        <input  type="radio" name="sex" id="exampleRadios1" value="นาย"  > &nbsp; นาย &nbsp; &nbsp;
                        <input  type="radio" name="sex" id="exampleRadios2" value="นางสาว"> &nbsp; นางสาว &nbsp; &nbsp;
                        <br><br>                          
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" name="firstname" placeholder="First name" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" name="lastname" placeholder="Last name" required>
                            </div>
                        </div><br>
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="รหัสนักศึกษา" name="id_studen"  required>
                        </div>
                        <select class="custom-select" name="branch"  required>
                            <option value="" selected>เลือกสาขา</option>
                            <option value="วิทยาการคอมพิวเตอร์">วิทยาการคอมพิวเตอร์</option>
                            <option value="สาธารณสุขชุมชน">สาธารณสุขชุมชน</option>
                            <option value="วิทยาศาสตร์สิ่งแวดล้อม">วิทยาศาสตร์สิ่งแวดล้อม</option>
                            <option value="ศิลปศาสตร์และการออกแบบ">ศิลปศาสตร์และการออกแบบ</option>
                        </select><br><br><br>
                            <select class="custom-select" name="class"  required>
                            <option value="" selected>เลือกชั้นปี</option>
                            <option value="1"> ปี 1</option>
                            <option value="2"> ปี 2</option>
                            <option value="3"> ปี 3</option>
                            <option value="4"> ปี 4</option>
                        </select><br><br>
                            <br>
                        <button type="submit" class="btn btn-primary">Submit</button>
</form>
      </div>
      
    </div>
  </div>
</div><br><br>
    <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">ชื่อนาม-สกุล</th>
                                    <th scope="col">รหัสนักศึกษา</th>
                                    <th scope="col">สาขา</th>
                                    <th scope="col">ปีที่</th>
                                    <th>จัดการ</th>
                                </tr>
                            </thead>
                            <tbody>
                             <% items.forEach(function(item) { %>
                               <tr>
                                <td><%= item.tible%></td>
                                <td><%= item.sex %><%= item.firstname %>  <%= item.lastname %> </td>
                                <td><%= item.id_studen %></td>
                                <td><%= item.branch %></td>
                                <td><%= item.class %></td>
                                <td><a  class="btn btn-primary edit" href="/edit/<%= item.idStuden %>">แก้ไข</a> &nbsp; <a class="btn btn-primary" style="background-color: red; border-color: red;" href="/delete/<%= item.idStuden %>">ลบ</a></td>
                              </tr>
                              <% }); %>
                            </tbody>
                          </table>
                      </div>
<% include footer %>



 